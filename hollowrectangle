// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
  int n,m;
  cout<<"Enter number of rows: ";
  cin>>n;
  cout<<"Enter number of columns: ";
  cin>>m;
  
  for(int i =0 ; i<m; i++){
      cout<<"*";
  }cout<<endl;
  for(int i=1;i<n-1;i++){
      for(int i = 1;i<=m;i++){
          if(i==1 || i == m){
          cout<<"*";
          continue;
      } cout<<" ";
      }cout<<endl;
      
  }
  for(int i = 0; i<m; i++){
      cout<<"*";
  }
      
  
    
    return 0;
}




---------------------------------------------OR---------------------------------------------





#include <iostream>
using namespace std;
int main() {
  int n,m;
  cout<<"Enter number of rows: ";
  cin>>n;
  cout<<"Enter number of columns: ";
  cin>>m;
  
  
  for(int i=1;i<=n;i++){
      for(int j = 1;j<=m;j++){
          if(i==1 || i == n || j==1 || j==m ){
            cout<<"*";
          } else {
              cout<<" ";
          }
      }
      cout<<endl;
  }

      
  
    
    return 0;
}

